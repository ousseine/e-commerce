{% extends 'base/main.html.twig' %}

{% block main_class %}{{ parent() }} login{% endblock %}
{% block title %}Shop : Se connecter{% endblock %}

{% block main %}
    <!-- Header-->
    <header class="bg-dark py-1">
        <div class="container px-4 px-lg-5 my-4">
            <h1 class="text-start text-white display-6 fw-normal">Créer un compte</h1>
        </div>
    </header>

    <!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 my-5">
            <form method="post" class="needs-validation mb-3" novalidate>
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecter en tant que are "{{ app.user.userIdentifier }}", <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    </div>
                {% endif %}

                <div class="mb-3">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    <div class="invalid-feedback">
                        Please enter a valid email for shipping updates.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="inputPassword">Mot de passe</label>
                    <div class="input-group">
                        <input type="password" name="password" id="inputPassword" class="form-control password" autocomplete="current-password" required>
                        <a href="#" class="icon-eye"><i class="bi bi-eye-slash"></i></a>
                    </div>
                    <div class="invalid-feedback">
                        Please enter a valid password for shipping updates.
                    </div>
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Se souvenir de moi
                    </label>
                </div>

                <button class="w-100 btn btn-md btn-primary" type="submit">
                    Créer un compte
                </button>
            </form>

            <small class="text-muted">Pas un compte ? <a href="{{ path('app_register') }}">Créer un compte</a></small>
        </div>
    </section>
{% endblock %}
