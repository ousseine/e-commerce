{% extends 'base/admin.html.twig' %}

{% block admin_class %}{{ parent() }} payment index{% endblock %}
{% block title %}Payment Request index{% endblock %}

{% block admin %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fs-3 fw-bolder m-0">PaymentRequest index</h1>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Created_at</th>
                <th>Paid_at</th>
                <th>Validated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for payment_request in payment_requests %}
            <tr>
                <td>{{ payment_request.id }}</td>
                <td>{{ payment_request.createdAt ? payment_request.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ payment_request.paidAt ? payment_request.paidAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ payment_request.validated ? 'Yes' : 'No' }}</td>
                <td>
                    {% include 'admin/payment_request/_delete_form.html.twig' %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
