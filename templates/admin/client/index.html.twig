{% extends 'base/admin.html.twig' %}

{% block admin_class %}{{ parent() }} client index{% endblock %}
{% block title %}Clients index{% endblock %}

{% block admin %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fs-3 fw-bolder m-0">Clients index</h1>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Phone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.phone }}</td>
                <td class="d-flex">
                    {% include 'admin/client/_delete_form.html.twig' %}
                    <a href="{{ path('app_admin_client_show', {'id': user.id}) }}" class="btn btn-sm btn-info ms-1">details</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
