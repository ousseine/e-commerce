{% extends 'base/admin.html.twig' %}

{% block admin_class %}{{ parent() }} order-quantity index{% endblock %}
{% block title %}OrderQuantity index{% endblock %}

{% block admin %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fs-3 fw-bolder m-0">OrderQuantity index</h1>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Quantity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order_quantity in order_quantities %}
            <tr>
                <td>{{ order_quantity.id }}</td>
                <td>{{ order_quantity.quantity }}</td>
                <td class="d-flex">
                    <a href="{{ path('app_admin_order_quantity_show', {'id': order_quantity.id}) }}" class="btn btn-sm btn-info me-1">details</a>
                    {% include 'admin/order_quantity/_delete_form.html.twig' %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
