{% extends 'base/admin.html.twig' %}

{% block admin_class %}{{ parent() }} order-quantity show{% endblock %}
{% block title %}Order Quantity{% endblock %}

{% block admin %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fs-3 fw-bolder m-0">Order Quantity</h1>
        <div class="d-flex align-items-center">
            {{ include('admin/order_quantity/_delete_form.html.twig') }}
            <a href="{{ path('app_admin_order_quantity_index') }}" class="btn btn-sm btn-dark ms-1">back to list</a>
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ order_quantity.id }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ order_quantity.quantity }}</td>
            </tr>
            <tr>
                <th>Product</th>
                {% for p in order_quantity.product %}
                    <td>{{ p.title }}</td>
                {% endfor %}
            </tr>
            <tr>
                <th>Order</th>
                {% for order in order_quantity.fromOrder %}
                    <td>{{ order.reference }}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>
{% endblock %}
